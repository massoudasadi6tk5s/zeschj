.extra2 {
  position: relative;
  width: 100%;
}

.extra2 .img-box {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 500rpx;
}

.extra2 .img-box::after {
  position: absolute;
  content: '';
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  /* box-shadow: 0 0 50px 10px var(--them-color) inset; */
  box-shadow: inset 0 30px 15px -10px  var(--them-color);
  transform: rotate(180deg);
  background: rgba(0,0,0,0.3);
}

.extra2 .img-box image {
  height: 100%;
  width: 100%;
}
.extra2  .show-icon{
  position: absolute;
  top:0;
  left:60rpx;
  z-index: 999;
  width:50rpx;
  height:50rpx;
}

