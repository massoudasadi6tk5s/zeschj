/* 标题 & 内容 & 头像 & 点赞评论 容器 */
.groupFather {
  width: 100%;
  /* background: pink; */
  overflow-y: scroll;
  position: relative;
  padding-bottom:80rpx;
}

.title {
  width: 100%;
  color: #ffffff;
  font-family: Poppins;
  font-size: 40px;
  font-weight: 600;
  word-wrap: break-word;
  padding:0 60rpx;
  margin-top:300rpx;
  /* background: yellow; */
}

.content {
  width: 100%;
  word-wrap: break-word;
  height: 200rpx;
  color: #ffffff;
  font-family: "Avenir-Book";
  font-size: 15px;
  font-weight: 400;
  line-height: 20px;
  letter-spacing: -0.24px;

  margin-top: 76rpx;
  padding:0 60rpx;

  /* background: pink; */
}


/* 头像 & 点赞评论 容器 */
.photoFather {
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  padding:10rpx;
  align-items: center;
  justify-content: space-between;
  /* background: yellow; */
}

.oval-box{
  display: flex;
  justify-content: flex-start;
}
.ovalCopy3 {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50px;
  border: solid 1px #ffffff;
  box-shadow: 0px 0px 2rpx #eaecef;
  margin-left: 10rpx;
}

.ovalCopy3 image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}



.likeCommentFather {
  display: flex;
}

.likeFather {

  display: flex;
  align-items: center;
  /*定义body的元素垂直居中*/
  justify-content: center;
  /*定义body的里的元素水平居中*/

  color: #ffffff;
  font-family: "Avenir-Book";
  font-size: 15px;
  font-weight: 400;
  line-height: 20px;
  letter-spacing: -0.24px;
}

.likeFather image {
  width: 56rpx;
  height: 56rpx;
}

.commentFather {
  display: flex;
  align-items: center;
  /*定义body的元素垂直居中*/
  justify-content: center;
  /*定义body的里的元素水平居中*/
  color: #ffffff;
  font-family: "Avenir-Book";
  font-size: 15px;
  font-weight: 400;
  line-height: 20px;
  letter-spacing: -0.24px;
  margin-left: 20rpx;
}

.commentFather image {
  width: 56rpx;
  height: 56rpx;
}



