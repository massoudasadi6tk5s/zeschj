  <image wx:if="{{imageArray.length==0}}" class="bg-img animated pulse" mode="aspectFill" src="{{defaultImg}}" style="height:100%;width:100%;"></image>

  <image wx:if="{{imageArray.length!=0 && index == imgIndex}}" wx:for="{{imageArray}}" class="bg-img animated pulse" mode="{{imgMode}}" src="{{item}}" style="height:100%;width:100%;"></image>


