  <view class="subject-area-father">

    <!-- 图片 -->
    <view class="select-images-father">
      <!-- 存储图片样张 -->
      <view class="storage-images-father">
        <view class="img-father" wx:for="{{imageArray}}" style="left:{{index*80}}rpx;">
          <image mode='aspectFit'  class="animated rollIn" src="{{item}}" data-index="{{index}}" bindtap="clickImg"></image>
        </view>
      </view>

      <!-- 上传图片按钮/图标 -->
      <view class="upload-icon" bindtap="selectImg">
