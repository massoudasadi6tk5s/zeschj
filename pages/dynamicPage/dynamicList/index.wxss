.dynamic-content {
  margin: 20rpx auto 20rpx auto;
  min-height: 200rpx;
  box-shadow: rgba(0, 0, 0, 0.5) 0px 3px 20px;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-radius: 5px;
}

.dynamic-content .user-header {
  display: flex;
  justify-content: flex-start;
}

.dynamic-content .user-header .avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
}

.dynamic-content .user-header .right-text {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.dynamic-content .user-header .right-text .name {
  font-size: 16px;
  color: #fff;
}

.dynamic-content .user-header .right-text .time {
  color: #999;
  font-size: 12px;
}

.dynamic-content .info {
  color: #fff;
  font-size: 15px;
  margin: 20rpx 0;
}

.dynamic-content .image-box {
  height: 600rpx;
  width: 100%;
  border-radius: 5px;
  overflow: hidden;
}

.dynamic-content .image-box image {
  height: 100%;
  width: 100%;
}

.dynamic-content .evaluation {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-start;
  position: relative;
}

.dynamic-content .evaluation .heart image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.dynamic-content .evaluation .heart {
  color: #fff;
  font-size: 14px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.dynamic-content .evaluation .copy {
  margin-left: 40rpx;
}
.dynamic-content .evaluation .avatar-more {
  height:50rpx;
  position: absolute;
  right:0;

}
.dynamic-content .evaluation .avatar-more image{
  height:50rpx;
  width:50rpx;
  border:2px solid #fff;
  border-radius: 50%;
  box-sizing: border-box;
}

.dynamic-content .evaluation .avatar-more .avatar2{
  position: absolute;
  right:30rpx;
  top:0;
}
.dynamic-content .evaluation .avatar-more .avatar3{
  position: absolute;
  right:60rpx;
  top:0;
}