.comments-father{
  height: 100%;
  width: 100%;
}

.comment-item{
  margin-bottom: 30rpx;
  width: 100%;
}

/* 头像 昵称 时间 */
.head-nick-time{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.head-portrait{
  width: 80rpx;
  height: 80rpx;
}

.head-portrait image{
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
}

.nick-time-father{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.nick-time-father .nickname{
  color: #ffffff;
  font-family: "Avenir-Heavy";
  font-size: 34rpx;
  font-weight: 400;
}

.nick-time-father .time{
  color: #4e586e;
  font-family: "Avenir-Book";
  font-size: 26rpx;
  font-weight: 400;
}

/* 评论内容 */
.content-father{
  margin-top: 12rpx;
  width: 100%;
}

.content{
  padding: 0rpx 20rpx;
  width: 100%;
  color: #ffffff;
  font-family: "Avenir-Book";
  font-size: 34rpx;
  font-weight: 400;
}


.reply-btn{
  margin-top: 30rpx;
  margin-left: 30rpx;
  color: #f54b64;
  font-family: "Avenir-Book";
  font-size: 30rpx;
  font-weight: 400;
}

.botton-line{
  margin-top: 30rpx;
  opacity: 0.5;
  width: 100%;
  height: 2px;
  border: solid 1px ;
}


/* 填写评论 容器 */
.addacommenFather {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
}

.commentInput {
  width: 618rpx;
  height: 68rpx;
  border-radius: 17px;
  background: #485164;
  margin-left: 30rpx;

  display: flex;
  align-items: center;
  /*定义body的元素垂直居中*/
  /* justify-content: center; 定义body的里的元素水平居中 */

}

.commentInput input {
  margin-left: 20rpx;
  color: var(--white);
}

.commentInput .input-placeholder {
  color: var(--white);
}

.iconsPlane {
  height: 68rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  /*定义body的元素垂直居中*/
  justify-content: center;
  /*定义body的里的元素水平居中*/

}

.iconsPlane image {
  width: 56rpx;
  height: 56rpx;
}