/* index/index.wxss */
page{
  min-height:100%;
}
.tabbar-content {
  box-sizing: border-box;
  overflow: auto;
  position: fixed;
  bottom:0;
  left:0;
  right: 0;
  z-index: 1024;
}

.tabbar-content {
  width: 100%;
  height: 120rpx;
  /* border: 1px solid red; */
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.tabbar-box {
  height: 90rpx;
  overflow: auto;
  background: #242a37;
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border:1px solid red; */
  box-shadow: rgba(0,0,0,0.5) 0px 3px 20px;
  
}
.box1{
  border-top-right-radius: 30px;
}
.box2{
  border-top-left-radius: 30px;
}

.tab-push {
  height: 100%;
  flex: 0 0 90rpx;
  position: relative;
}
.tab-item{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  font-size: 15px;
  color:var(--orange-color);
}
.tab-item text{
  margin-left:10rpx; 
}
.push-block {
  border-radius: 50%;
  height: 90rpx;
  width: 90rpx;
  background: linear-gradient(145deg, #F78361, #f54b64);
  box-shadow: 0 0 3px #F78361;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease-in-out;
}
.push-block image{
  width:60rpx;
  height:60rpx;
}
.push-block:active{
  transform: scale(0.8);
}
.tab-icon{
  width:50rpx;
  height:50rpx;
  transition: all 0.3s;
}
.tab-active{
  transform: scale(0.9);
}