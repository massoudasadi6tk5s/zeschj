page{
  background-color: #242A37;
  width: 100%;
  height: 100%;
} 

.main{
  width: 100%;
  height: 100%;
}

.messageTitle{

  margin-top: 180rpx;

  height: 100rpx;
  width: 100%;
}

.messageTitle view{

  margin: 20rpx 30rpx;

  color: #ffffff;
  font-family: "Avenir-Heavy";
  font-size: 34px;
  font-weight: 400;
  line-height: 41px;
  letter-spacing: 0.41px;
}

