/* 朋友列表 容器 */
.friendListFather{
  opacity: 0.5;
  width: 100%;
  border-bottom: solid 1px;
  border-top: solid 1px;

  margin-top: 20rpx;
}

scroll-view{
  height: 100%;
  white-space: nowrap;
  margin: 25rpx 0;
}

.friend{

  display: inline-block;


  height: 166rpx;
  width: 120rpx;

  margin: 0 20rpx;

  /* background: greenyellow; */
}

.friendHeadPhoto{
  position: relative;
}

.friendHeadPhoto image{
  width: 120rpx;
  height: 120rpx;
}

.oval2Copy{
  position: absolute;
  bottom: 0;
  right: 0;

  width: 12px;
  height: 12px;
  border-radius: 50px; 
  border: solid #ffffff;
  background: #7ed321;
  
}


.friendName{
  color: #ffffff;
  font-family: "Avenir-Heavy";
  font-size: 11px;
  font-weight: 400;
  line-height: 13px;
  text-align: center;
  letter-spacing: 0.07px;
}

