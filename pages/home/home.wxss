/* 搜索 容器 */
.navbar{
  position: relative;
  width: 95%;
  height: 72rpx;
  /* background: pink; */
  
  margin: 180rpx auto 25rpx auto;

  align-content: center;
}

.searchFiel{
  position: relative;

  width: 80%;
  height: 72rpx;
  background-color: rgba(142,142,147,0.12);
  /* background-color: red; */
  border-radius: 25px;
  
}

.searchIcon{
  width: 48rpx;
  height: 48rpx;
  margin-top: 15rpx;
  margin-left: 25rpx;

}

.search{
  position: absolute;
  width: 46.5px;
  height: 20px;

  left: 80rpx;
  top: 15rpx;


  color: #4e586e;
  font-family: "Avenir-Book";
  font-size: 15px;
  font-weight: 400;
  line-height: 20px;
  letter-spacing: -0.24px;
}

.oval{
  position: absolute;
  right: 35rpx;
  top: 0rpx;

  width: 72rpx;
  height: 72rpx;
  border-radius: 50rpx;
  background: linear-gradient(220deg, #F78361, #F54B64);
}

.icons13Pho{
  width: 48rpx;
  height: 48rpx;

  margin: 10rpx 10rpx;
}




/*  start 滑动标签 */
.nav-wrap {

}

.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}

.nav-item {
  display: inline-block;
  padding: 20rpx 44rpx;
  /* font-size: 40rpx; */

  color: #333a4d;
  font-family: "Avenir-Heavy";
  font-size: 34px;
  font-weight: 400;
  line-height: 41px;
  letter-spacing: 0.41px;
}

.active {
  color: #fff;
}

