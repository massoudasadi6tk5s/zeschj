<custom-header>
  <view class="navbar" slot="header">
    <!-- 搜索框 -->
    <view class="search-fiel animated rotateInDownRight">
      <image class="search-icon" src="../../images/appeal/_icons--search.png"></image>
      <view class="search">
        <input placeholder="搜索" maxlength="20"></input>
      </view>
    </view>
    <view class="oval animated rotateInDownRight" bindtap="goToRelease">
      <image class="icons-13-pho" src="../../images/appeal/_icons--13-photo.png"></image>
    </view>
  </view>
</custom-header>
<view class="main" style="height:calc(100vh - {{CustomBar}}px);">
  <scroll-view scroll-x>
    <view class="nav">
      <view bindtap="activeNav" data-index="{{index}}" class="nav-item {{index===currentIndexNav?'active':''}} animated bounceInRight" style="animation-delay:{{index/10}}s;" wx:for="{{navList}}" wx:key="{{index}}">
        {{item.text}}
      </view>
    </view>
  </scroll-view>
  <!-- 帖子 || 诉求 -->
  <view class="loading-page" wx:if="{{isLoading}}">
    <image src="../../images/logo.png"></image>
  </view>
  <scroll-view  class="post-scroll" scroll-y="true" enable-back-to-top="true" bindscroll="postSole" wx:if="{{!isLoading}}">
    <!-- 靠左边的 -->
    <view class="post-list-left">
      <!-- 单个帖子 -->
      <single-dynamic data="{{leftAppealList}}"></single-dynamic>
    </view>
    <!-- 靠右边的 -->
    <view class="post-list-right">
      <!-- 单个帖子 -->
      <single-dynamic data="{{rightAppealList}}"></single-dynamic>
    </view>
  </scroll-view>
</view>