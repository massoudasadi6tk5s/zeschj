

<view class="main">

  

  <!-- 搜索的容器 -->
  <view class="navbar">

    <!-- 搜索框 -->
    <view class="searchFiel animated rotateInDownRight">
      <image class="searchIcon" src="../../images/appeal/_icons--search.png"></image>
      <view class="search">
        <text>搜索</text>
      </view>

    </view>

    <view class="oval animated rotateInDownRight">
      <image class="icons13Pho" src="../../images/appeal/_icons--13-photo.png"></image>
    </view>



  </view>

  <!-- 首页导航 -->
  <view class="nav-wrap">
    <!-- 我需要左右滚动 -->
    <scroll-view class="nav" scroll-x>
      <view bindtap="activeNav" data-index="{{index}}" class="nav-item {{index===currentIndexNav?'active':''}} animated bounceInRight" style="animation-delay:{{index/10}}s;" wx:for="{{navList}}" wx:key="{{index}}">
        {{item.text}}
      </view>

    </scroll-view>
  </view>

  <!-- 帖子 || 诉求 -->
  <swiper style="height:100%;" current="{{current}}" circular="true" easing-function="easeInOutCubic" bindchange="swiperCurrent">


    <swiper-item wx:for="{{3}}">
      <view class="postView">

        <scroll-view class="postScroll" scroll-y="true" enable-back-to-top="true" bindscroll="postSole">



          <!-- 靠左边的 -->
          <view class="postListLeft">
            <!-- 单个帖子 -->
            <view open-type="getUserInfo" class="postItem animated slideInLeft" bindtap="gotoDetails">
              <!-- 个人信息 -->
              <view class="itemUserInfo">
                <image src="../../images/appeal/oval.png"></image>
                <!-- 个人昵称 -->
                <view class="itemNickName">
                  <text>Joel Jacobs</text>
                </view>

                <view class="time">
                  <text>2 hours ago</text>
                </view>

              </view>

              <!-- 帖子照片 || 可能没有-->
              <view class="rectangle">
                <image src="../../images/appeal/rectangle-copy-12.png"></image>
              </view>

              <!-- 帖子类型 && 帖子内容 -->
              <view class="postContent">
                <!-- 类型 -->
                <view class="postType">
                  <text>#relax，#travel</text>
                </view>

                <view class="postDetails">
                  <text>Bryce Canyon A Stunning US Travel Destination</text>
                </view>

              </view>

              <!-- 喜欢&评论 容器 -->
              <view class="likeAndComment">
                <view class="like">
                  <image src="../../images/appeal/_icons--8-like.png"></image>
                  <view class="likeCount">
                    <text>1120</text>
                  </view>
                </view>

                <view class="comment">
                  <image src="../../images/appeal/_icons--8-like-copy.png"></image>
                  <view class="CommentCount">
                    <text>1120</text>
                  </view>
                </view>
              </view>


            </view>


          </view>

          <!-- 靠右边的 -->
          <view class="postListRight">
            <!-- 单个帖子 -->
            <view class="postItem animated slideInRight" bindtap="gotoDetails">
              <!-- 个人信息 -->
              <view class="itemUserInfo">
                <image src="../../images/appeal/oval.png"></image>
                <!-- 个人昵称 -->
                <view class="itemNickName">
                  <text>Joel Jacobs</text>
                </view>

                <view class="time">
                  <text>2 hours ago</text>
                </view>

              </view>

              <!-- 帖子照片 || 可能没有-->
              <!-- <view class="rectangle">

              <!-- 帖子类型 && 帖子内容 -->
              <view class="postContent">
                <!-- 类型 -->
                <view class="postType">
                  <text>#relax，#travel</text>
                </view>

                <view class="postDetails">
                  <text>Bryce Canyon A Stunning US Travel Destination</text>
                </view>

              </view>

              <!-- 喜欢&评论 容器 -->
              <view class="likeAndComment">
                <view class="like">
                  <image src="../../images/appeal/_icons--8-like.png"></image>
                  <view class="likeCount">
                    <text>1120</text>
                  </view>
                </view>

                <view class="comment">
                  <image src="../../images/appeal/_icons--8-like-copy.png"></image>
                  <view class="CommentCount">
                    <text>1120</text>
                  </view>
                </view>
              </view>


            </view>
          </view>






        </scroll-view>

      </view>
    </swiper-item>





  </swiper>



</view>