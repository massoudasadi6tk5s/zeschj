page {
  background: var(--them-color);
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}

.main {
  width: 100%;
}

/* 搜索 容器 */

.navbar {
  position: relative;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-fiel {
  display: flex;
  align-items: center;
  height: 64rpx;
  background-color: rgba(142, 142, 147, 0.12);
  border-radius: 25px;
}

.search-icon {
  margin-left: 20rpx;
  width: 48rpx;
  height: 48rpx;
}

.search {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  height: 40rpx;
  color: #4e586e;
  font-family: "Avenir-Book";
  font-size: 15px;
  font-weight: 400;
}

.oval {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50rpx;
  background: linear-gradient(220deg, #f78361, #f54b64);
  margin-left: 20rpx;
}

.icons-13-pho {
  width: 48rpx;
  height: 48rpx;
}

/*  start 滑动标签 */

.nav-wrap {
  padding: 0 25rpx;
}

.nav {
  height:100rpx;
  display: flex;
  justify-content: flex-start;
  padding:20rpx;
}

.nav-item {
  display: block;
  padding: 10rpx 30rpx;
  color: gray;
  font-family: "Avenir-Heavy";
  font-size: 30rpx;
  font-weight: 400;
  letter-spacing: 0.41px;
}

.active {
  color: #fff;
  background: linear-gradient(220deg, var(--orange-color), var(--deep-pink));
  border-radius: 200px;
}

/*  end 滑动标签 */

/* start 帖子||诉求 */

swiper {
  width: 100%;
}

swiper-item {
  width: 100%;
}

.post-view {
  width: 100%;
  height: 100%;
}

.post-scroll {
  position: relative;
  height:calc(100% - 100rpx);
  box-sizing: border-box;
}
.scroll-content{
  display: flex;
  justify-content: space-between;
}
.post-scroll .more-loading{
  text-align: center;
  color:var(--white);
  font-size: 13px;
  padding:5rpx 0;
}
.post-scroll .more-loading .no-more{
  color:var(--grey-color6e);
}
.post-list-left {
  padding-left: 20rpx;
  padding-top: 30rpx;
}

.post-list-right {
  padding-right: 20rpx;
  padding-top: 30rpx;
}

.loading-page {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-page image {
  width: 120rpx;
  height: 120rpx;
  animation: 1s loading-ani infinite alternate;
}

@keyframes loading-ani {
  from {
    opacity: 1;
  }

  to {
    opacity: 0.1;
  }
}

/* end 对帖子的css */
