/* pages/messageDetail/messageDetail.wxss */
@import "../../template/return/return.wxss";

page {
  width: 100%;
  background: var(--gray-color4);
}

.msg-detail-content {
  width: 100%;
}
.chat-detail-father{
  /* height: 80vh; */
  width: 100%;
  /* height:calc(100vh-64px-45px); */
}

.nickname-head-father {
  color: var(--orange-color);
  font-family: "Avenir-Heavy";
  font-weight: 600;
}



/* 自己发送的消息 */
.chat-detail-father .me-send-father{
  display: flex;
  justify-content: flex-end;
  margin: 40rpx auto;
}

.me-send-msg{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  max-width: 600rpx;
  background: linear-gradient(220deg, #F78361, #F54B64);
  border-top-left-radius: 8px;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}

.me-msg-word{
  margin: 20rpx;
  color: #ffffff;
  font-family: "Avenir-Medium";
  font-size: 14px;
  font-weight: 400;
}

/* 别人发送的消息 */
.other-send-father{
  display: flex;
  justify-content: flex-start;
  margin: 40rpx auto;
}

.other-send-msg{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  max-width: 600rpx;
  background: #fff;
  border-top-right-radius: 8px;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}

.other-msg-word{
  margin: 20rpx;
  color: #242a37;
  font-family: "Avenir-Medium";
  font-size: 14px;
  font-weight: 400;
}

.send-msg-input{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  padding:10rpx 0;
  background: var(--gray-color4);
  /* box-shadow: 0px 0px 0px 2px #efefef; */
}

.msg-input-father{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 620rpx;
  height: 70rpx;
  border-radius: 50px;
  padding-left: 20rpx;
  background: #ffffff;
  /* border:1px solid #d9d9d9; */
}

.msg-input-father input{
  width: 600rpx;
}

.input-icon{
  width: 60rpx;
  height: 60rpx;
}

.input-icon image{
  width: 60rpx;
  height: 60rpx;
}