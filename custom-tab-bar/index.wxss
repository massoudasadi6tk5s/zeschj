/* custom-tab-bar/index.wxss */
cover-view {
  box-sizing: border-box;
  overflow: auto;
}

.tabbar-content {
  width: 100%;
  height: 120rpx;
  border: 1px solid red;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.tabbar-box {
  height: 90rpx;
  overflow: auto;
  background: #242a37;
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border:1px solid red; */
  box-shadow: rgba(0,0,0,0.5) 0px 3px 20px;
  
}
.box1{
  border-top-right-radius: 30px;
}
.box2{
  border-top-left-radius: 30px;
}

.tab-push {
  height: 100%;
  flex: 0 0 90rpx;
  position: relative;
}
.tab-item{
  text-align: center;
  flex: 1;
}
.push-block {
  border-radius: 50%;
  height: 90rpx;
  width: 90rpx;
  background: linear-gradient(145deg, #F78361, #f54b64);
  box-shadow: 0 0 3px #F78361;
  position: absolute;
  bottom: 30rpx;
  left: 0;
}